<div class="config pl-60 pr-60 pb-30">
    <h2 class="pt-30 pb-10 underline"><%= FZUtils.getLangKey("settings.title") %></h2>
    <div class="flex gap-20 direct-column">
        <div class="card pd-30">
            <div class="card-body flex gap-20 justif-between direct-column">
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp"><%= FZUtils.getLangKey("settings.lang.title") %></h2>
                        <h2 class="expl__config reset-mp"><%= FZUtils.getLangKey("settings.lang.subtitle") %></h2>
                    </div>
                    <div class="flex align-center gap-20">
                        <div class="ui selection dropdown config__choose_langapp">
                            <input type="hidden" name="langKey">
                            <i class="dropdown icon"></i>
                            <div class="default text"></div>
                            <div class="menu"></div>
                        </div>
                    </div>
                </div>
                <div class="config-item devTools">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp"><%= FZUtils.getLangKey("settings.devtools.title") %></h2>
                        <h2 class="expl__config reset-mp"><%= FZUtils.getLangKey("settings.devtools.subtitle") %></h2>
                    </div>
                    <div class="flex align-center gap-20">
                        <a class="btn btn-primary settings__open_devTools">Ouvrir</a>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp"><%= FZUtils.getLangKey("settings.dirapp.title") %></h2>
                        <h2 class="expl__config reset-mp"><%= dirList[0] %></h2>
                        <input disabled type="hidden" name="chooseAppDataDirInput" value="<%= dirList[0] %>" required />
                    </div>
                    <div class="flex align-center gap-20">
                        <a class="btn btn-primary config__choose_dirapp" style="width: 8rem;"><%= FZUtils.getLangKey("settings.dirapp.action") %></a>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp"><%= FZUtils.getLangKey("settings.sentry.title") %></h2>
                        <h2 class="expl__config reset-mp"><%= FZUtils.getLangKey("settings.sentry.subtitle") %></h2>
                    </div>
                    <div class="flex align-center gap-20">
                        <div class="ui toggle checkbox mb-10">
                            <input type="checkbox" class="config__launcher_checkbox" data-default="true" data-id="launcher__sentry" data-notyf="<%= FZUtils.getLangKey('settings.reboot.app') %>">
                            <label></label>
                        </div>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp"><%= FZUtils.getLangKey("settings.darkmode.title") %></h2>
                        <h2 class="expl__config reset-mp"><%= FZUtils.getLangKey("settings.darkmode.subtitle") %></h2>
                    </div>
                    <div class="flex align-center gap-20">
                        <div class="ui toggle checkbox mb-10">
                            <input type="checkbox" class="config__launcher_checkbox" data-default="true" data-callback="FZUtils.switchThemeMode((($(this).is(':checked')) ? 'light' : 'dark'), (($(this).is(':checked')) ? 'dark' : 'light'), isMaximised)" data-id="launcher__darkmode">
                            <label></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card pd-30">
            <div class="card-body flex gap-20 justif-between direct-column">
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp">Version actuelle</h2>
                        <h2 class="expl__config reset-mp"><%= version %></h2>
                    </div>
                    <div class="flex align-center gap-20">
                        <a class="btn btn-primary config__launcher_pnotes"><%= FZUtils.getLangKey("settings.pnotes.action") %></a>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp">Node</h2>
                        <h2 class="expl__config reset-mp"><%= processVersions.node %></h2>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp">Chrome</h2>
                        <h2 class="expl__config reset-mp"><%= processVersions.chrome %></h2>
                    </div>
                </div>
                <div class="config-item">
                    <div class="column flex direct-column justif-center">
                        <h2 class="label__config reset-mp">Electron</h2>
                        <h2 class="expl__config reset-mp"><%= processVersions.electron %></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br /><br /><br />
    <div class="flex gap-15 justif-center">
        <a data-link="https://discord.gg/sSf7NCs8Ap" class="social"><i class="fa-brands fa-discord"></i></a>
        <a data-link="https://www.instagram.com/frazionz/" class="social"><i class="fa-brands fa-instagram"></i></a>
        <a data-link="https://twitter.com/frazionz/" class="social"><i class="fa-brands fa-twitter"></i></a>
        <a data-link="https://www.tiktok.com/@frazionz" class="social"><i class="fa-brands fa-tiktok"></i></a>
    </div>
    <div class="credits">
        <span>Réalisé par RacconFlow - Non affilié à Mojang AB</span>
        <span>© 2022 FrazionZ. Tous droits réservés - <a href="#">Conditions Générales</a></span>
    </div>
</div>
<script>
    var Settings = require('<%= srcDir %>assets/js/connected/settings.js');
    var settings = new Settings();
</script>